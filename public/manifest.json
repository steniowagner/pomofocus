{
  "manifest_version": 3,
  "name": "Pomofocus",
  "version": "1.0.0",
  "description": "Bring focus and push distractions away.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "timer-handler.js"
  },
  "permissions": ["storage", "alarms", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
